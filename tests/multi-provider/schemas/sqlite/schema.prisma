generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./test.db"
}

generator zod {
  provider = "node /home/omar/Desktop/NewFolder/libs/prisma-zod-generator/lib/generator.js"
  output   = "./generated"
}

model SQLiteUser {
  id      Int         @id @default(autoincrement())
  email   String      @unique
  name    String?
  posts   SQLitePost[]
}

model SQLitePost {
  id        Int         @id @default(autoincrement())
  title     String
  content   String?
  published Boolean      @default(false)
  createdAt DateTime     @default(now())
  author    SQLiteUser?  @relation(fields: [authorId], references: [id])
  authorId  Int?
}
