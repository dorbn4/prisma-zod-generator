generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://localhost:27017/test"
}

generator zod {
  provider = "node /home/omar/Desktop/NewFolder/libs/prisma-zod-generator/lib/generator.js"
  output   = "./generated"
}

model MongoUser {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String?
  posts    MongoPost[]
  profile  MongoProfile?
}

model MongoProfile {
  id     String    @id @default(auto()) @map("_id") @db.ObjectId
  bio    String?
  user   MongoUser @relation(fields: [userId], references: [id])
  userId String    @db.ObjectId @unique
}

model MongoPost {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String?
  published Boolean   @default(false)
  createdAt DateTime  @default(now())
  author    MongoUser @relation(fields: [authorId], references: [id])
  authorId  String    @db.ObjectId
}
