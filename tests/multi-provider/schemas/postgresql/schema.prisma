enum PostgreSQLUserRole {
  ADMIN
  USER
}

model PostgreSQLUser {
  id      Int       @id @default(autoincrement())
  email   String    @unique
  name    String?
  role    PostgreSQLUserRole?
  scores  Int[]
  tags    String[]
  profile PostgreSQLProfile?
  posts   PostgreSQLPost[]
}

model PostgreSQLProfile {
  id     Int             @id @default(autoincrement())
  bio    String?
  user   PostgreSQLUser  @relation(fields: [userId], references: [id])
  userId Int             @unique
}

model PostgreSQLPost {
  id        Int             @id @default(autoincrement())
  title     String
  content   String?
  published Boolean         @default(false)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  likes     BigInt
  data      Json?
  bytes     Bytes?
  author    PostgreSQLUser? @relation(fields: [authorId], references: [id])
  authorId  Int?
}
