{
  "mode": "custom",
  "output": "./prisma/generated",
  "strictCreateInputs": false,
  "preserveRequiredScalarsOnCreate": false,
  "globalExclusions": {
    "pure": ["password", "hashedPassword"],
    "input": [],
    "result": []
  },
  "models": {
    "User": {
      "variants": {
        "pure": { "excludeFields": ["emailVerifiedAt"] },
        "input": { "excludeFields": ["role", "permissions"] },
        "result": { "excludeFields": ["password"] }
      }
    }
  }
}
