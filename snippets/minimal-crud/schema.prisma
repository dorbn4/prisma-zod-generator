// Example generator block for minimal CRUD focused output
// Copy into your schema.prisma and adjust paths

generator zodMinimalCrud {
  provider         = "prisma-zod-generator"
  output           = "./prisma/generated"
  useMultipleFiles = true
  // Minimal mode is typically configured via JSON, but you can also set it here:
  // minimal = true
  config           = "./zod-generator.config.json"
}
