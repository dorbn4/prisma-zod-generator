// Example generator block for single-file output
// Copy into your schema.prisma and adjust paths

generator zodSingleFile {
  provider              = "prisma-zod-generator"
  output                = "./prisma/generated"
  useMultipleFiles      = false
  singleFileName        = "schemas.ts" // optional; default is schemas.ts
  placeSingleFileAtRoot = true          // optional; default is true
  config                = "./zod-generator.config.json"
}
